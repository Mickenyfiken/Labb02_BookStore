<Window x:Class="Labb02_BookStore.Presentation.Dialogs.AddStoreDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Labb02_BookStore.Presentation.Dialogs"
        mc:Ignorable="d"
        Title="AddStoreDialog" 
        Height="450" 
        Width="800"
        Background="#F7CB8B">
    
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="120"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>

        <Label Content="Store Name" Grid.Row="0" Grid.Column="0" Margin="0, 0, 1, 0" FontWeight="Bold"/>
        <TextBox Text="{Binding StoreName, UpdateSourceTrigger=PropertyChanged}" Grid.Row="0" Grid.Column="1" Margin="0, 5"/>

        <Label Content="Street" Grid.Row="1" Grid.Column="0" Margin="0, 0, 10, 0" FontWeight="Bold"/>
        <TextBox Text="{Binding Street, UpdateSourceTrigger=PropertyChanged}" Grid.Row="1" Grid.Column="1" Margin="0, 5"/>

        <Label Content="Zipcode" Grid.Row="2" Grid.Column="0" Margin="0, 0, 10, 0" FontWeight="Bold"/>
        <TextBox Text="{Binding ZipCode, UpdateSourceTrigger=PropertyChanged}" Grid.Row="2" Grid.Column="1" Margin="0, 5"/>

        <Label Content="City" Grid.Row="3" Grid.Column="0" Margin="0, 0 , 10, 0" FontWeight="Bold"/>
        <TextBox Text="{Binding City, UpdateSourceTrigger=PropertyChanged}" Grid.Row="3" Grid.Column="1" Margin="0, 5"/>

        <Label Content="Country" Grid.Row="4" Grid.Column="0" Margin="0, 0, 10, 0" FontWeight="Bold" />
        <TextBox Text="{Binding Country, UpdateSourceTrigger=PropertyChanged}" Grid.Row="4" Grid.Column="1" Margin="0, 5"/>

        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Orientation="Horizontal" Grid.Row="5" Grid.ColumnSpan="2">
            <Button 
                HorizontalAlignment="Right"
                Width="120"
                Margin="0 10 5 10"
                Padding="10"
                Background="#3F95D4"
                Foreground="White"
                FontSize="14"
                FontWeight="SemiBold"
                Cursor="Hand"
                Content="Add" 
                Command="{Binding SaveCommand}"/>
            
            <Button 
                HorizontalAlignment="Right" 
                Background="#E2574C" 
                Foreground="White"
                Content="Cancel"
                Width="120"
                Margin="0 10 5 10"
                Padding="10"
                FontSize="14"
                FontWeight="SemiBold"
                Cursor="Hand"
                Command="{Binding CancelCommand}"/>
            </StackPanel>
    </Grid>
</Window>
