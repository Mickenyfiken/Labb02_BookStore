<UserControl x:Class="Labb02_BookStore.Views.MenuView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Labb02_BookStore.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Menu>
        <MenuItem Header="_File">
            <MenuItem Header="Select Store"/>
            <Separator />
            <MenuItem Header="E_xit" InputGestureText="Alt+F4" Click="Exit_Program"  />
        </MenuItem>

        <MenuItem Header="_Store">
            <MenuItem Header="Edit Store" Command="{Binding OpenEditStoreDialogCommand}"/>
            <MenuItem Header="Add Store" Command="{Binding OpenAddStoreDialogCommand}"/>
            <MenuItem Header="Remove Store" Command="{Binding DeleteStoreCommand}"/>
        </MenuItem>


        <MenuItem Header="_Books">
            <MenuItem Header="Edit Book"/>
            <MenuItem Header="Remove Book"/>
            <MenuItem Header="Add Book"/>
        </MenuItem>
        
    </Menu>
    
    
</UserControl>
